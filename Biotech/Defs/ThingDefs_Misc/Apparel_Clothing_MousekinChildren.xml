<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- Commoner Children's Apparel -->
	
	<ThingDef ParentName="Mousekin_ApparelCommonerMakeableBase">
		<defName>Mousekin_ApparelChildOutfit</defName>
		<label>Mouseling Outfit</label>
		<description>A simple shirt and pair of trousers held up by suspenders worn by most commoner and middle-class Mouseling boys, practical for helping around the house or playing in the flower gardens.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/MousekinChildOutfit/MousekinChildOutfit</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<!-- only trousers are stuffable -->
		<costStuffCount>20</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<costList>
			<!-- shirt -->
			<Cloth>20</Cloth>
		</costList>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>3600</WorkToMake>
			<Mass>0.4</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.45</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.20</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>4</EquipDelay>
		</statBases>
		<apparel>
			<developmentalStageFilter>Child</developmentalStageFilter>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/MousekinChildOutfit/MousekinChildOutfit</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>MousekinStartingColonist</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
			<gender>Male</gender>
		</apparel>
		<!-- Trousers color options (for cloth fabric type only) -->
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<!-- Dark pastel red -->
					<weight>10</weight>
					<only>(107, 81, 81)</only>
				</li>
				<li>
					<!-- Dark pastel green -->
					<weight>10</weight>
					<only>(91, 105, 83)</only>
				</li>
				<li>
					<!-- Dark pastel blue -->
					<weight>10</weight>
					<only>(81, 98, 107)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>
	
	<ThingDef ParentName="Mousekin_ApparelCommonerMakeableBase">
		<defName>Mousekin_ApparelChildDress</defName>
		<label>Mouseling Dress</label>
		<description>A simple full-body dress worn by most commoner and middle-class Mouseling girls, practical for helping around the house or playing in the flower gardens.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/MousekinChildDress/MousekinChildDress</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<!-- only outer dress layer is stuffable -->
		<costStuffCount>40</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<costList>
			<!-- inner petticoat layer -->
			<Cloth>30</Cloth>
		</costList>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>4800</WorkToMake>
			<Mass>1</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.50</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.20</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>6</EquipDelay>
		</statBases>
		<apparel>
			<developmentalStageFilter>Child</developmentalStageFilter>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/MousekinChildDress/MousekinChildDress</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>MousekinStartingColonist</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
			<gender>Female</gender>
		</apparel>
		<!-- Dress color options (for cloth fabric type only) -->
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<!-- Dark pastel red -->
					<weight>10</weight>
					<only>(107, 81, 81)</only>
				</li>
				<li>
					<!-- Dark pastel green -->
					<weight>10</weight>
					<only>(91, 105, 83)</only>
				</li>
				<li>
					<!-- Dark pastel blue -->
					<weight>10</weight>
					<only>(81, 98, 107)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>
	
</Defs>