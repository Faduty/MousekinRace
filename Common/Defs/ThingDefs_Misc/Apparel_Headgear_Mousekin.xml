		</graphicData>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<tradeability>None</tradeability>
		<destroyOnDrop>true</destroyOnDrop>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Mousekin/Apparel/CloakHood</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>Mousekin_NoSpawn</li>
				<li>Mousekin_HideEars</li>
			</tags>
		</apparel>
	</ThingDef>
	
