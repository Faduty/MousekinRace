	<!-- Middle-class Headgear -->
	
	<ThingDef ParentName="Mousekin_HatMiddleMakeableBase">
		<defName>Mousekin_HatNunVeil</defName>
		<label>Mousekin Nunâ€™s Veil</label>
		<description>A demure veil worn by Mousekin nuns to keep hair out of their faces while administering rites, as well as caring for the sick and orphaned. Has holes to accommodate Mousekin ears.</description>
		<graphicData>
			<texPath>Things/Pawn/Mousekin/Apparel/HatNunVeil</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<!-- only outer veil (10) is stuffable -->
		<costStuffCount>10</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<costList>
			<!-- inner coif (20) is always made from cloth -->
			<Cloth>20</Cloth>
		</costList>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
			<Mass>0.1</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
