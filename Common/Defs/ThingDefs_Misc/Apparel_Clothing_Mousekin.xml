<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- Commoner Apparel -->

	<ThingDef ParentName="Mousekin_ApparelCommonerMakeableBase">
		<defName>Mousekin_ApparelSettlerOutfit</defName>
		<label>Mousekin Settler’s Outfit</label>
		<description>A simple shirt, pair of trousers and a vest, typically worn by Mousekin settlers and homesteaders.</description>
		<graphicData>
			<texPath>Things/Pawn/Mousekin/Apparel/SettlerOutfit</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<!-- only vest (20) part of apparel is stuffable -->
		<costStuffCount>20</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<costList>
			<!-- actual shirt (30) and trousers (30) are always made from cloth -->
			<Cloth>60</Cloth>
		</costList>
		<statBases>
			<MaxHitPoints>180</MaxHitPoints>
			<WorkToMake>3600</WorkToMake>
			<Mass>1.0</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>4</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<PlantWorkSpeed>0.05</PlantWorkSpeed>
			<CookSpeed>0.05</CookSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Mousekin/Apparel/SettlerOutfit</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>MousekinStartingColonist</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
			<gender>Male</gender>
		</apparel>
		<!-- Vest color options (for cloth fabric type only) -->
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<!-- Dark green -->
					<weight>10</weight>
					<only>(0.130,0.270,0.130)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

	<ThingDef ParentName="Mousekin_ApparelCommonerMakeableBase">
		<defName>Mousekin_ApparelSettlerDress</defName>
