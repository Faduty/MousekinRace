				<li>
					<!-- Dark pastel red -->
					<weight>10</weight>
					<only>(0.420,0.318,0.318)</only>
				</li>
				<li>
					<!-- Dark pastel green -->
					<weight>10</weight>
					<only>(0.357,0.412,0.325)</only>
				</li>
				<li>
					<!-- Dark pastel blue -->
					<weight>10</weight>
					<only>(0.318,0.384,0.420)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

