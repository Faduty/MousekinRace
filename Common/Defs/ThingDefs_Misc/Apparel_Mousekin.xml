<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef Name="Mousekin_ApparelBase" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<techLevel>Medieval</techLevel>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>2</DeteriorationRate>
			<Beauty>-2</Beauty>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<burnableByRecipe>true</burnableByRecipe>
		<smeltable>true</smeltable>
		<apparel>
			<useWornGraphicMask>true</useWornGraphicMask>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
		</apparel>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>

	<ThingDef Name="Mousekin_ApparelMakeableBase" ParentName="Mousekin_ApparelBase" Abstract="True">
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<!-- TODO: Add Mousekin tailoring bench -->
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
		<thingCategories>
			<li>Mousekin_Apparel</li>
		</thingCategories>
	</ThingDef>

	<ThingDef Name="Mousekin_HatMakeableBase" Abstract="True">
		<thingCategories>
			<li>Mousekin_Headgear</li>
		</thingCategories>
	</ThingDef>

	<!-- Commoner Apparel -->

	<ThingDef ParentName="Mousekin_ApparelMakeableBase">
		<defName>Mousekin_ApparelSettlerOutfit</defName>
		<label>Mousekin Settler’s Outfit</label>
		<description>A simple shirt, pair of trousers and a vest, typically worn by Mousekin settlers and homesteaders.</description>
		<graphicData>
			<texPath>Things/Pawn/Mousekin/Apparel/SettlerOutfit</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<!-- only vest (15) part of apparel is stuffable -->
		<costStuffCount>15</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<costList>
			<!-- actual shirt (20) and trousers (20) are always made from cloth -->
			<Cloth>40</Cloth>
		</costList>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>3600</WorkToMake>
			<Mass>0.2</Mass>
			<StuffEffectMultiplierArmor>0.15</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<PlantWorkSpeed>0.05</PlantWorkSpeed>
			<CookSpeed>0.05</CookSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Mousekin/Apparel/SettlerOutfit</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>MousekinStartingColonist</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
			<gender>Male</gender>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>Mousekin_ResearchApparelCommoner</researchPrerequisite>
		</recipeMaker>
		<!-- Vest color options (for cloth fabric type only) -->
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<!-- Dark green -->
					<weight>10</weight>
					<only>(0.130,0.270,0.130)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

	<ThingDef ParentName="Mousekin_ApparelMakeableBase">
		<defName>Mousekin_ApparelSettlerDress</defName>
		<label>Mousekin Settler’s Dress</label>
		<description>A simple full-body dress with an apron and shawl, typically worn by Mousekin settlers and homesteaders.</description>
		<graphicData>
			<texPath>Things/Pawn/Mousekin/Apparel/SettlerDress</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<!-- only outer dress layer (40) and shawl (5) are stuffable -->
		<costStuffCount>45</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<costList>
			<!-- apron (5) and inner petticoat layer (25) -->
			<Cloth>30</Cloth>
		</costList>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>4800</WorkToMake>
			<Mass>0.2</Mass>
			<StuffEffectMultiplierArmor>0.15</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<PlantWorkSpeed>0.05</PlantWorkSpeed>
			<CookSpeed>0.05</CookSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Mousekin/Apparel/SettlerDress</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>MousekinStartingColonist</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
			<gender>Female</gender>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>Mousekin_ResearchApparelCommoner</researchPrerequisite>
		</recipeMaker>
		<!-- Dress and shawl color options (for cloth fabric type only) -->
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<!-- Dark pastel red -->
					<weight>10</weight>
					<only>(0.420,0.318,0.318)</only>
				</li>
				<li>
					<!-- Dark pastel green -->
					<weight>10</weight>
					<only>(0.357,0.412,0.325)</only>
				</li>
				<li>
					<!-- Dark pastel blue -->
					<weight>10</weight>
					<only>(0.318,0.384,0.420)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

</Defs>