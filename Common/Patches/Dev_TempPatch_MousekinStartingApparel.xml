<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<operations>

			<!-- Temporarily define generic starting apparel for all Mousekin PawnKinds - this allows the third-party Character Editor mod to spawn new Mousekins properly -->
			<!-- The patch will be removed once all PawnKinds are given proper Mousekin apparel -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/PawnKindDef[@Name="Mousekin_BasePawnKind"]</xpath>
				<value>
					<apparelTags>
						<li>IndustrialBasic</li>
					</apparelTags>
					<apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
					<apparelMoney>350~600</apparelMoney>
				</value>
			</li>

		</operations>
	</Operation>

</Patch>