<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Flowers (Continued)</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- Allow Mousekin beehive to recognize selected flowers for honey and beeswax production -->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Mousekin_Beehive"]/modExtensions/li[@Class="MousekinRace.BeehiveValidFlowersExtension"]/validFlowerPlantDefs</xpath>
					<value>
						<li>Plant_Buttercup</li>
						<li>Plant_Chrysanthemum</li>
						<li>Plant_Crocus</li>
						<li>Plant_Daffodil</li>
						<li>Plant_Dahlia</li>
						<li>Plant_Daisy</li>
						<li>Plant_Iris</li>
						<li>Plant_Lily</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>