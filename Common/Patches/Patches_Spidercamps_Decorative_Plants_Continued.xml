<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Spidercamp's Decorative Plants (Continued)</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- Allow Mousekin beehive to recognize selected flowers for honey and beeswax production -->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Mousekin_Beehive"]/modExtensions/li[@Class="MousekinRace.BeehiveValidFlowersExtension"]/validFlowerPlantDefs</xpath>
					<value>
						<li>SCBluehydrangea</li>
						<li>SCLavender</li>
						<li>SCPinkhydrangea</li>
						<li>SCSunflowerBush</li>
						<li>SCWhitehydrangea</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>